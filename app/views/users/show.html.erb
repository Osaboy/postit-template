<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class='well'>
  <dl class ='dl-horizontal'>
    <dt>Username:</dt><dd><%= @user.username %></dd>
    <dt>Time zone:</dt><dd><%= @user.time_zone %></dd> 
    <dt>Two factor auth:</dt><dd>
    <dt>Phone:</dt><dd>
  </dl>
</div>

<hr/>
<h5><%= @user.username %>'s Activity</h5>

<ul class='nav nav-tabs'>
  <li class='<%= 'active' if params[:tab].nil? %>'>
    <%= link_to "Posts (#{@user.posts.size})", user_path(@user, tab: 'posts') %>
  </li>
  <li class='<%= 'active' if params[:tab] == 'comments' %>'>
    <%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
  </li>
</ul>
<% if params[:tab].nil? || params[:tab] == 'posts' %>
  <% @user.posts.each do |user_post| %>
    <%= render 'posts/post', post: user_post %>
  <% end %>
<% elsif params[:tab] == 'comments' %>
  <% @user.comments.each do |user_comment| %>
    <%= render 'comments/comment', comment: user_comment %>
  <% end %>
 
<% end %>


